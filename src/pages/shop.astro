---
import Layout from '../layouts/default.astro';
import ShopItems from '../components/ShopItems.astro';
import Cart from '../components/solid/Cart';
---

<Layout>
	<div class="shop">
		<h1>Shop Sandwich Kits</h1>

		<noscript>
			<p>
				JavaScript is required to purchase things from tec sandwich web store.
				to order by phone, call 1-800-555-1212.
			</p>
		</noscript>

		<div class="products">
			<ShopItems />
			<Cart client:only="solid-js" />
		</div>
	</div>
</Layout>

<style>
	.shop {
		padding: 3rem 5%;
	}

	.products {
		align-items: flex-start;
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr 260px;
		position: relative;
	}
</style>
